generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  userId       String    @id @default(cuid())
  userName     String
  password     String
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  messages     Message[] // Relaci贸 amb els missatges
  rooms        Room[]    @relation("UserRooms") // Relaci贸 many-to-many amb les sales
}

model Room {
  roomId    String    @id @default(cuid())
  roomName  String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  messages  Message[] // Relaci贸 amb els missatges
  users     User[]    @relation("UserRooms") // Relaci贸 many-to-many amb els usuaris
}

model Message {
  messageId   String   @id @default(cuid())
  messageText String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  userId      String
  roomId      String
  user        User     @relation(fields: [userId], references: [userId])
  room        Room     @relation(fields: [roomId], references: [roomId])
}
